getwd()
read.csv("medi.csv")
text.data <- read.csv("medi.csv")
View(text.data)

text.data <- tolower(text.data)
install.packages("tm")
library(tm)
text.data <- removePunctuation(text.data)
text.data <- removeNumbers(text.data)
text.data <- removeWords(text.data, stopwords("english"))
text.data <- stemDocument(text.data)
corpus <- Corpus(VectorSource(text.data))
dtm <- DocumentTermMatrix(corpus)
word_freq <- colSums(as.matrix(dtm))

library(text)
install.packages("text")
library(RColorBrewer)
library(wordcloud)
wordcloud(names(word_freq), word_freq, random.order = FALSE)
